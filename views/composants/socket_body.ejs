<h2><%= __("clavardage") %></h2>
<section id="enregistrement">
	<input type="text">
	<button onclick="enregistrement()">Enregistrement</button>
</section>
<section id='chat' style="display: none;">
	<div id="conteneurUser">
		<h3>Utilisateurs en ligne</h3>
		<table id='list_user'></table>
		<p><%= __("clavardageText") %></p>
	</div>
	<div id="conteneurMessage">
		<h3>Message</h3>
		<table id='message'>
			<tr class='gabaritMessage'>
				<td class="messageUser"></td>
				<td class="contenu"></td>
			</tr>
		</table>
		<section id='message_a_transmettre'>
			<input type="text" name="txtMessage">
			<button onclick='transmettre_un_message()'>Envoyer</button>
		</section>
	</div>
</section>