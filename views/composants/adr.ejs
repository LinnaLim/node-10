    	</tr>
        <tr>
        <% let noLigne = 0 %> 
        <% for (elm of adresses) { %>  
            <% for (p in elm) { %>
                <% if (noLigne == 0){ %>
                    <td class="<%= p %>" ><%= elm[p] %></td>

                <% } else {%>
                    <td class="<%= p %>" contenteditable='true'><%= elm[p] %></td>

                <% } %>
                <% noLigne++ %>
            <% } %>
                        <td><a href="/detruire/<%= elm._id %>"><i id="supprimer" class="fas fa-trash-alt"></i></a></td>
                        <td><a class='modifier' href="#"><i id="modifier" class="fas fa-save"></i></a></td>
            </tr>
        <% } %>
    </table>
</div>